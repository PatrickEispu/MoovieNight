CREATE TABLE CONTA(
ID_CONTA SERIAL PRIMARY KEY NOT null,
NOME VARCHAR NOT null,
EMAIL VARCHAR NOT null,
DATA_NASCIMENTO DATE NOT null,
ID_CARTAO VARCHAR(7) NOT null,
TIPO_CONTA VARCHAR NOT null
);

CREATE TABLE BIBLIOTECA_USUARIO(
ID_PEDIDO_ALUGUEL VARCHAR PRIMARY KEY NOT NULL,
FK_ID_CONTA INT NOT null,
FILME VARCHAR NOT null,
FOREIGN KEY (FK_ID_CONTA) REFERENCES CONTA(ID_CONTA)
);

CREATE TABLE FILME (
ID_FILME SERIAL PRIMARY KEY NOT null,
NOME VARCHAR UNIQUE NOT null,
GENERO VARCHAR NOT NULL,
CLASS_INDICATIVA INT NOT null,
QUANTIDADE INT NOT null
);

CREATE TABLE DESCRICAO(
FK_ID_FILME INT NOT null,
SINOPSE TEXT NOT null,
FOREIGN KEY (FK_ID_FILME) REFERENCES FILME(ID_FILME)
);

CREATE TABLE PEDIDO(
FK_ID_PEDIDO_ALUGUEL VARCHAR,
INICIO_ALUGUEL DATE NOT null,
FIM_ALUGUEL DATE NOT null,
ALUGUEL_STATUS VARCHAR NOT NULL,
FOREIGN KEY (FK_ID_PEDIDO_ALUGUEL) REFERENCES BIBLIOTECA_USUARIO(ID_PEDIDO_ALUGUEL));

